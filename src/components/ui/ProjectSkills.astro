---
import Button from './Button.astro'
const { skills } = Astro.props
---

<div
  class="flex flex-col justify-center gap-y-2 md:flex-row md:gap-x-5 md:gap-y-0"
>
  <div class="flex flex-row justify-center flex-wrap gap-x-2 gap-y-2">
    {
      skills.map((skill: string[]) => (
        <Button as="button" title={skill} style="pill" />
      ))
    }
  </div>
</div>
